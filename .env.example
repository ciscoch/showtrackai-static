# ShowTrackAI Static Site Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=ShowTrackAI
NEXT_PUBLIC_APP_VERSION=1.0.0

# Optional: OpenAI Configuration (for AI features)
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id_here

# Optional: Additional Services
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here